<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.matra.logit"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LogIt"
            android:label="@string/title_activity_log_it" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewExercise"
            android:label="@string/title_activity_new_exercise"
            android:parentActivityName="com.matra.LogIt"
            android:theme="@android:style/Theme.Holo.Light.Dialog" >
        </activity>
        <activity
            android:name=".NewMetric"
            android:label="@string/title_activity_new_metric"
            android:parentActivityName="com.matra.LogIt"
            android:theme="@android:style/Theme.Holo.Light.Dialog" >
        </activity>
        <activity
            android:name=".UpdateMetric"
            android:label="@string/title_activity_update_metric"
            android:parentActivityName="com.matra.LogIt"
            android:theme="@android:style/Theme.Holo.Light.Dialog" >
        </activity>
        <activity
            android:name=".NewDetail"
            android:label="@string/title_activity_new_detail" 
            android:parentActivityName="com.matra.LogIt"
            android:theme="@android:style/Theme.Holo.Light.Dialog" >
            
        </activity>
    </application>

</manifest>